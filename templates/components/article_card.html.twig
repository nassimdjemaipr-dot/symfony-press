<article style="border: 1px solid #ddd; padding: 20px; margin-bottom: 20px; border-radius: 8px;">
    {% if article.image %}
        <img src="{{ asset('uploads/images/' ~ article.image) }}"
             alt="{{ article.title }}"
             loading="lazy"
             width="300" height="200"
             style="width: 100%; max-height: 200px; object-fit: cover; border-radius: 5px; margin-bottom: 15px;">
    {% endif %}
    <header>
        <h2><a href="{{ path('article_show', {slug: article.slug}) }}">{{ article.title }}</a></h2>
        <time datetime="{{ article.createdAt|date('Y-m-d') }}" style="color: #666; font-size: 0.9em;">
            {{ article.createdAt|date('d/m/Y') }}
        </time>
        {% if article.category %}
            <span style="background: #eee; padding: 2px 8px; border-radius: 4px; font-size: 0.8em; margin-left: 10px;">
                {{ article.category.name }}
            </span>
        {% endif %}
    </header>
    <p style="margin-top: 10px; color: #444;">
        {{ article.content|slice(0, 150) }}...
    </p>
    <a href="{{ path('article_show', {slug: article.slug}) }}" style="display: inline-block; margin-top: 10px;">Lire la suite &rarr;</a>
</article>