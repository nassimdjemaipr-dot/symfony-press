{% extends 'base.html.twig' %}

{% block title %}Admin - Nouvel article{% endblock %}

{% block body %}
<main>
    <section style="margin: 30px 0;">
        <header>
            <h1>Créer un nouvel article</h1>
            <a href="{{ path('admin_article_index') }}" style="color: #666;">&larr; Retour à la liste</a>
        </header>

        <div style="margin-top: 30px; max-width: 600px;">
            {{ form_start(form, {'attr': {'style': 'display: flex; flex-direction: column; gap: 20px;', 'enctype': 'multipart/form-data'}}) }}

                <div>
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, {'attr': {'style': 'width: 100%; padding: 10px; font-size: 1em; border: 1px solid #ddd; border-radius: 5px;'}}) }}
                    {{ form_errors(form.title) }}
                </div>

                <div>
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content, {'attr': {'style': 'width: 100%; padding: 10px; font-size: 1em; border: 1px solid #ddd; border-radius: 5px; min-height: 200px;'}}) }}
                    {{ form_errors(form.content) }}
                </div>

                <div>
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category, {'attr': {'style': 'width: 100%; padding: 10px; font-size: 1em; border: 1px solid #ddd; border-radius: 5px;'}}) }}
                    {{ form_errors(form.category) }}
                </div>

                <div>
                    {{ form_label(form.imageFile) }}
                    {{ form_widget(form.imageFile, {'attr': {'style': 'width: 100%; padding: 10px; font-size: 1em; border: 1px solid #ddd; border-radius: 5px;'}}) }}
                    {{ form_errors(form.imageFile) }}
                    <small style="color: #666;">Formats acceptés : JPEG, PNG, GIF, WebP. Taille max : 2Mo</small>
                </div>

                <button type="submit" style="background: #28a745; color: white; padding: 15px 30px; border: none; border-radius: 5px; font-size: 1em; cursor: pointer;">
                    Créer l'article
                </button>
            {{ form_end(form) }}
        </div>
    </section>
</main>
{% endblock %}