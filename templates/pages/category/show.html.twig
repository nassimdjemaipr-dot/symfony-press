{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - SymfonyPress{% endblock %}

{% block body %}
<section style="margin: 30px 0;">
    <header>
        <h1>Catégorie : {{ category.name }}</h1>
        <p style="color: #666; margin-top: 10px;">
            {{ category.articles|length }} article(s) dans cette catégorie
        </p>
    </header>

    <div style="margin-top: 30px;">
        {% for article in category.articles %}
            {% include 'components/article_card.html.twig' with {article: article} %}
        {% else %}
            <p role="alert">Aucun article dans cette catégorie.</p>
        {% endfor %}
    </div>

    <footer style="margin-top: 40px;">
        <a href="{{ path('home') }}">&larr; Retour à l'accueil</a>
    </footer>
</section>
{% endblock %}
